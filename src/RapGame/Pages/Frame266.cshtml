@page
@model RapGame.Pages.Frame266Model
@inject RapGame.Utils.MediaHelper mediaHelper
@{
     ViewData["Title"] = Model.MediaData.Title;
}

<div class="container-fluid z-110">
    <div class="row">
        <div class="col-8 align-self-center">
            <div class="row animate__animated animate__slow animate__fadeInUp">
                <div class="col-7 display-3 text-center">
                    <b>Wow, you have become a <br /> master rapper. </b>
                </div>
            </div>

            <div class="row animate__animated animate__slow animate__fadeInUp animate__delay-2s">
                <div class="col display-3 text-center" style="padding-top:5rem;padding-left:15rem">
                    <b>You have obtained all 50 <br /> Mystic Mics</b>
                </div>
            </div>

            <div class="row animate__animated animate__slow animate__fadeInUp animate__delay-3s">
                <div class="col display-3 text-center" style="padding-top:5rem; padding-left:45rem;">
                    <b>But just before you <br /> go…</b>
                </div>
            </div>
        </div>

        <div class="col-4 animate__animated animate__slow animate__fadeInUp">
            <img class="img w-40 preserve-width" src="@mediaHelper.GetMediaPath(Model.MediaData.PathsToImages[0])" />
        </div>
    </div>
</div>
