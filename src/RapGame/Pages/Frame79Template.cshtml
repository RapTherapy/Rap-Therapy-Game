@page
@model RapGame.Pages.Frame79TemplateModel
@inject RapGame.Utils.MediaHelper mediaHelper
@{
    ViewData["Title"] = Model.MediaData.Title;
    ViewBag.ShowButtom = false;
    
}

<div class="container z-110">
    <div class="row">
        <div class="col-8 text-center">
            <div class="row pb-5 mb-5 mt-5 display-3 text-center animate__animated animate__fadeInUp animate__slow">
                <b>Pick an emotion to write a rap about.</b>
            </div>
            <div class="row animate__animated animate__fadeInUp animate__slow animate__delay-2s z-110">
            @foreach (var item in Model.GameData)
            {
                <div class="row pt-4">
                    <form method="post">
                            @if (!Model.ThreeGameCompleted)
                            {
                                if (item.EmotionForRap == "Excited" || item.EmotionForRap == "Angry" )
                                {
                                                <input class="d-none" type="text" name="emotionForRap" value="@item.EmotionForRap" />
                                                                        <button type="submit" disabled style="border:none; background:none; outline:none;" asp-page-handler="StartGame" class=" @(item.IsEmoteSelected == true ? "text-success" : "")" ><b><b class="display-1" ><b>@item.EmotionForRap</b></b></b></button>
                                }
                                        else
                                        {
                                    if (item.IsEmoteSelected == true)
                                    {
                                                         <input class="d-none" type="text" name="emotionForRap" value="@item.EmotionForRap"/>
                                                                                                    <button  type="submit"  style="border:none; background:none; outline:none;" asp-page-handler="StartGame" class=" @(item.IsEmoteSelected == true ? "text-success" : "")" disabled ><b><b class="display-1" ><b>@item.EmotionForRap</b></b></b></button>
                                    }
                                    
                                    else
                                    {
                                                             <input class="d-none" type="text" name="emotionForRap" value="@item.EmotionForRap"/>
                                                                                                <button  type="submit"  style="border:none; background:none; outline:none;" asp-page-handler="StartGame" class=" @(item.IsEmoteSelected == true ? "text-success" : "")"  ><b><b class="display-1" ><b>@item.EmotionForRap</b></b></b></button>
                                    }
                                                                                 
                                }
                            }
                            else
                            {
                                if (item.IsEmoteSelected == true)
                                {
                                                                     <input class="d-none" type="text" name="emotionForRap" value="@item.EmotionForRap"/>
                                                                                                                <button  type="submit"  style="border:none; background:none; outline:none;" asp-page-handler="StartGame" class=" @(item.IsEmoteSelected == true ? "text-success" : "")" disabled ><b><b class="display-1" ><b>@item.EmotionForRap</b></b></b></button>
                                }

                                else
                                {
                                                                         <input class="d-none" type="text" name="emotionForRap" value="@item.EmotionForRap"/>
                                                                                                            <button  type="submit"  style="border:none; background:none; outline:none;" asp-page-handler="StartGame" class=" @(item.IsEmoteSelected == true ? "text-success" : "")"  ><b><b class="display-1" ><b>@item.EmotionForRap</b></b></b></button>
                                }
                            }                
                    </form>
                </div>
            }
            </div>
        </div>

        <div class="col-4 align-self-center animate__animated animate__fadeInUp animate__slow">
            <img class="img w-40 preserve-width" src="@mediaHelper.GetMediaPath(Model.MediaData.PathsToImages[0])" />
        </div>
    </div>
</div>

<script src="~/js/game5.js"></script>
