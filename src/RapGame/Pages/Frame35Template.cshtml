@page
@model RapGame.Pages.Frame35TemplateModel
@inject RapGame.Utils.MediaHelper mediaHelper
@{  
    ViewBag.ShowLogoutButtom = false;
    ViewData["Title"] = Model.MediaData.Title;
    ViewBag.ShowSoundButton = false;
}

<div class="container pt-5 z-120 z-110scaling100">
    <div class="row">
        <div class="col border border-2 border-success align-self-center bordergreen">
            <div class="row m-5">
                <div class="col-6 align-self-center animate__animated animate__flip animate__slower  text-center">
                    <img  class="img w-30" src="@mediaHelper.GetMediaPath(@Model.MediaData.PathsToImages[0])">
                </div>

                <div class="col-6 align-self-center">
                    <div class="row z-150">
                        <div class="display-1"><b>You have</b></div>
                        <div class="row">
                         <div class="col-2 display-1  animate__animated  animate__flip animate__slower  text-end"><b>@Model.CountOfMysticMics</b></div>
                          <div class="col-4 display-1"><b>@(Model.CountOfMysticMics > 10 ? " " : "")/ 50</b></div>
                        </div>                    
                        <div class="display-1"><b>Mystic Mics</b></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
