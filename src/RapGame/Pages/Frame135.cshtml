@page
@model RapGame.Pages.Frame135Model
@inject RapGame.Utils.MediaHelper mediaHelper
@{
    ViewData["Title"] = Model.MediaData.Title;
    ViewBag.ShowMicsCounter = true;
}


<div class="container-fluid text-center h-100 mt-5">
    <div class="row">
        <br>
    </div>
    <div class="row pt-4 h-100 align-items-center">
        <div class=" col-xl-8 z-110">
            <div class="row display-3 animate__animated animate__fadeInUp animate__slower mb-5 pb-5">
                <div clas="col">
                    <b>You have now reached the halfway point… </b>
                </div>
            </div>
            <div class="row display-3 animate__animated animate__fadeInUp animate__slower animate__delay-3s">
                <div clas="col">
                    <b>Let’s play a game to see how much of a</b>
                </div>
            </div>
            <div class="row display-3 animate__animated animate__fadeInUp animate__slower animate__delay-3s">
                <div clas="col">
                    <b>superstar rapper you have become!</b>
                </div>
            </div>
        </div>
        <div class=" col-xl-4 pt-5 mt-5 animate__animated animate__fadeInUp animate__slower">
            <img  src="@mediaHelper.GetMediaPath(Model.MediaData.PathsToImages[0])" />
        </div>
    </div>
</div>